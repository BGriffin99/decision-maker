<!DOCTYPE html>
<html lang="en">
<head>
  <title>Pollarizing - Share Poll</title>
  <%- include('partials/_head') %>
  <!-- <script src="https://cdn.jsdelivr.net/npm/clipboard@2.0.11/dist/clipboard.min.js"></script> -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/assisfery/SocialShareJS@1.4/social-share.min.css">
  <script src="https://cdn.jsdelivr.net/gh/assisfery/SocialShareJS@1.4/social-share.min.js"></script>
</head>
<body>
  <%- include('partials/_header') %>
  <!-- <script type="text/javascript">new ClipboardJS('.btn');</script> -->
  <main class="container">
    <section class="vote-section">
      <form class="vote-form">
<!-- Vote question-->
        <div class="vote-question">
          <h3><%= title %></h3>
          <p>Your poll has been created.<br />
          You will receive an email notification every time a new vote is submitted</p>
        </div>
<!-- Vote options-->
        <div class="vote-set">
          <a href="/polls/<%= submissionLink %>"><h5>This is a voting link for you to share</h5></a>
          <input id="submissionLink" value="http://localhost:8080/polls/<%= submissionLink %>" width="80%">
          <button class="btn" data-clipboard-target="#submissionLink" class="btn btn-light">Copy</button>
          <div class="ss-box" data-ss-link="http://localhost:8080/polls/<%= submissionLink %>"></div>
          <a href="/polls/<%= userLink %>/results"><h5>This link allows you to view the poll results</h5></a>
          <input id="userLink" value="http://localhost:8080/polls/<%= userLink %>/results" width="80%">
          <button class="btn" data-clipboard-target="#userLink" class="btn btn-light">Copy</button>
        </div>
      </form>
    </section>
  </main>
  <%- include('partials/_footer') %>
</body>
</html>
